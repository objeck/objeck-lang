ARGS=-O3 -D_X64 -Wall -Wno-unused-function -std=c++17 -mavx2 -Wno-deprecated-declarations -Wunused-variable -fno-sanitize-recover

AR=ar
COMMON_LIBS=jit_common.a
COMMON_PATH=..
SRC=../jit_common.o jit_amd_lp64.o
LIB=../../../jit_amd_lp64.a

$(LIB): $(COMMON_LIBS) $(SRC)
	$(AR) -cvq $(LIB) $(SRC)

jit_common.a:
	cd $(COMMON_PATH); $(MAKE) -f make/Makefile.amd64

%.o: %.cpp
	$(CXX) -m64 $(ARGS) -c $< 

clean:
	cd $(COMMON_PATH); $(MAKE) -f make/Makefile.amd64 clean
	rm -f *.o *~ $(LIB)
