		method : SetNames(name : String) ~ Nil {
			offset := name->FindLast(':');
			if(offset > 0) {
				@namespace := name->SubString(offset);
				offset += 1;
				@name := name->SubString(offset, name->Size() - offset);
			}
			else {
				@namespace := "";
				@name := name;
			};
		}
		
