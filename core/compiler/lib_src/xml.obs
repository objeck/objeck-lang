		#~
		Creates a string representation of the element 
		@return string representation of the element
		~#
		method : public : ToString() ~ String {
			input := String->New();
			ToString(input);
			return input;
		}
		
		#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
		# serializes an element 
		# into a string
		~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
		method : ToString(input : String) ~ Nil {
			# element
			if(@name <> Nil & @type = XmlElement->Type->ELEMENT) {
				input->Append('<');
				# name and namespace
				if(@namespace <> Nil & @namespace->Size() > 0) {
					input->Append(@namespace);
					input->Append(':');
				};				
				input->Append(@name);
				
				# attribs
				if(@attribs <> Nil) {
					keys := @attribs->GetKeys()<String>;
					each(i : keys) {
						key : String := keys->Get(i)->As(String);
						attrib := @attribs->Find(key);
						input->Append(' ');
						namespace := attrib->GetNamespace();
						if(namespace <> Nil & namespace->Size() > 0) {
							input->Append(namespace);
							input->Append(':');
						};
						input->Append(key);
						input->Append('=');
						input->Append('"');
						input->Append(attrib->GetValue());
						input->Append('"');
					};
				};
				input->Append('>');
				
				# process content
				if(@content <> Nil) {
					input->Append(@content);
				};
					
				# process children
				if(@children <> Nil) {
					each(i : @children) {
						child : XmlElement := @children->Get(i);
						child->ToString(input);
					};
				};
				input->Append('<');
				input->Append('/');
				input->Append(@name);
				input->Append('>');
			}
			# cdata
			else if(@type = XmlElement->Type->CDATA) {
				input->Append("<![CDATA[");
				if(@content <> Nil) {
					input->Append(@content);
				};
				input->Append("]]>");
			};
		}
		
		#~
		Get all child elements that matchs the given filter
		@param name element name
		@return child elements
		~#
		method : public : native : GetChildren(name : String) ~ Vector<XmlElement> {
			filtered := Vector->New()<XmlElement>;
			
			if(@children <> Nil) {
				each(i : @children) {
					element : XmlElement := @children->Get(i);
					if(element->GetName()->Equals(name)) {
						filtered->AddBack(element);
					};
				};
			};
						
			return filtered;
		}
		
		#~
		Get the first element that matchs the given filter
		@param name element name
		@return first match, Nil otherwise
		~#
		method : public : native : GetFirstChild(name : String) ~ XmlElement {
			filtered := GetChildren(name);

			if(filtered->Size() > 0) {
				return filtered->Get(0);
			};
			
			return Nil;
		}
		
		#~
		Get the last element that matchs the given filter
		@param name element name
		@return last match, Nil otherwise
		~#
		method : public : native : GetLastChild(name : String) ~ XmlElement {
			filtered := GetChildren(name);
			
			if(filtered->Size() > 0) {
				return filtered->Get(filtered->Size() - 1);
			};
			
			return Nil;
		}
		
		#~
		Get all child elements that matchs the given filter
		@param name element name
		@param attrib attrib name
		@return child elements
		~#
		method : public : native : GetChildren(name : String, attrib : String) ~ Vector<XmlElement> {
			filtered := Vector->New()<XmlElement>;
			
			each(i : @children) {
				element : XmlElement := @children->Get(i);
				if(element->GetName()->Equals(name) & element->GetAttribute(attrib) <> Nil) {
					filtered->AddBack(element);
				};
			};
			
			return filtered;
		}
		
		#~
		Get all child elements that matchs the given filter
		@param name element name
		@param max max number of elements to return
		@return child elements
		~#
		method : public : native : GetChildren(name : String, max : Int) ~ Vector<XmlElement> {
			filtered := Vector->New()<XmlElement>;

			if(max > 0) {
				found := 0;
				for(i := 0; i < @children->Size() & found < max; i += 1;) {
					element : XmlElement := @children->Get(i);
					if(element->GetName()->Equals(name)) {
						filtered->AddBack(element);
						found += 1;
					};
				};
			};
			
			return filtered;
		}
		
		#~
		Get all children
		@return child elements
		~#
		method : public : GetChildren() ~ Vector<XmlElement> {
			if(@children <> Nil) {
				return @children;
			};
			
			return Vector->New()<XmlElement>; 
		}
		
		#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
		# parses element name
		~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
		method : GetElementName(filter : String) ~ String {
			name := String->New();
			
			i := 0;
			while(i < filter->Size() & filter->Get(i) <> '[') {
				name->Append(filter->Get(i));
				i += 1;
			};
			
			return name;
		}
		
		#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
		# parses element expression
		# tags
		~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
		method : GetElementExpression(filter : String) ~ String {
			if(filter->EndsWith("]")) {
				end_pos := filter->Size() - 1;
				start_pos := end_pos;
				while(start_pos > -1 & filter->Get(start_pos) <> '[') {
					start_pos -= 1;
				};

				expr : String;
				if(start_pos < end_pos) {
					start_pos += 1;
					expr := filter->SubString(start_pos, end_pos - start_pos);	
				};
								
				return expr;
			};
			
			return Nil;
		}
		
		#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
		# parses element expression
		# tags
		~~~~~~~~~~~~~~~~~~~~~~~~~~~~~# 
		method : ProcessExpression(filter : String, element : XmlElement) ~ Vector<XmlElement> {
			expr := GetElementExpression(filter);
			if(expr <> Nil) {
				if(expr->Equals("first()")) {
					matches := Vector->New()<XmlElement>;

					match := element->GetFirstChild(GetElementName(filter));
					if(match <> Nil) {
						matches->AddBack(match);
					};

					return matches;
				}
				else if(expr->Equals("last()")) {
					matches := Vector->New()<XmlElement>;

					match := element->GetLastChild(GetElementName(filter));
					if(match <> Nil) {
						matches->AddBack(match);
					};
					
					return matches;
				}
				else {
					if(expr->Size() > 0) {
						if(expr->Get(0)->IsDigit()) {
							max := expr->Trim()->ToInt();
							return element->GetChildren(GetElementName(filter), max);
						} 
						else if(expr->Get(0)->IsChar()) {
							return element->GetChildren(GetElementName(filter), expr);
						};
					};
				};
				
				return Vector->New()<XmlElement>;
			};
				
			return element->GetChildren(filter)<XmlElement>;
		}
		
		#~
		Finds matching XML elements using xpath like syntax. Supports 'first()', 'last()' and '[cdata]' functions.
		@param path search string
		@return matching XML elements
		~#
		method : public : FindElements(path : String) ~ Vector<XmlElement> {
			children := Vector->New()<XmlElement>;
						
			# tokenize path into filters
			start := 0;
			filters := Vector->New()<String>;
			each(i : path) {
				if(path->Get(i) = '/') {
					if(i - start > 0) {
						filter := path->SubString(start, i - start);
						filters->AddBack(filter);
					};
					start := i + 1;
				};
			};
			if(start < path->Size() & path->Size() - start > 0) {
				filter := path->SubString(start, path->Size() - start);
				filters->AddBack(filter);
			};
			
			# process query
			first_filter := filters->Get(0)->As(String);
			if(filters->Size() > 0 & first_filter->Equals(@self->GetName())) {
				if(filters->Size() = 1) {
					children->AddBack(@self);
				}
				else {
					# process root query
					filter := filters->Get(1)->As(String);
					children := ProcessExpression(filter, @self);
											
					# process children
					for(i := 2; i < filters->Size(); i += 1;) {
						# get filter
						filter := filters->Get(i)->As(String);
						# filter children
						all_filtered := Vector->New()<XmlElement>;
						each(j : children) {
							# process child queries
							element := children->Get(j);
							filtered := ProcessExpression(filter, element);
							each(filter := filtered) {
								all_filtered->AddBack(filter);
							};
						};
						children := all_filtered;
					};
				};
			};
			
			return children;
		}
		
		#~
		Encodes an XML string
		@param input string to encode
		@return encoded string
		~#
		function : EncodeString(input : String) ~ String {
			out := String->New();
			
			each(i : input) {
				c := input->Get(i);
				select(c) {
					label ' ': {
						out->Append("&#x20;");
					}
					
					label '\t': {
						out->Append("&#x9;");
					}
					
					label '\n': {
						out->Append("&#xA;");
					}
					
					label '\r': {
						out->Append("&#xD;");
					}

					label '<': {
						out->Append("&lt;");
					}

					label '>': {
						out->Append("&gt;");
					}
					
					label '&': {
						out->Append("&amp;");
					}

					label '"': {
						out->Append("&quot;");
					}
					
					other: {
						out->Append(c);
					}
				};
			};
			
			return out;
		}
		
		#~
		Decodes an XML string
		@param input string to decode
		@return decoded string
		~#
		function : DecodeString(input : String) ~ String {
			max := input->Size();
			i := 0;
			
			out := String->New();
			while(i < max) {
				c := input->Get(i);
				# &lt;
				if(c = '&') {
					start := i;
					i += 1;
					if(i < max & input->Get(i) = 'l') {
						i += 1;
						if(i < max & input->Get(i) = 't') {
							i += 1;
							if(i < max & input->Get(i) = ';') {
								i += 1;
								out->Append('<');
							}
							else {
								for(j := start; j < i; j += 1;) {
									out->Append(input->Get(j));
								};
								out->Append(c);
							};
						}
						else {
							for(j := start; j < i; j += 1;) {
								out->Append(input->Get(j));
							};
							out->Append(c);
						};
					}
					# &gt;
					else if(i < max & input->Get(i) = 'g') {
						i += 1;
						if(i < max & input->Get(i) = 't') {
							i += 1;
							if(i < max & input->Get(i) = ';') {
								i += 1;
								out->Append('>');
							}
							else {
								for(j := start; j < i; j += 1;) {
									out->Append(input->Get(j));
								};
								out->Append(c);
							};
						}
						else {
							for(j := start; j < i; j += 1;) {
								out->Append(input->Get(j));
							};
							out->Append(c);
						};
					}
					# &amp;
					else if(i < max & input->Get(i) = 'a') {
						i += 1;
						if(i < max & input->Get(i) = 'm') {
							i += 1;
							if(i < max & input->Get(i) = 'p') {
								i += 1;
								if(i < max & input->Get(i) = ';') {
									i += 1;
									out->Append('&');
								}
								else {
									for(j := start; j < i; j += 1;) {
										out->Append(input->Get(j));
									};
									out->Append(c);
								};
							}
							else {
								for(j := start; j < i; j += 1;) {
									out->Append(input->Get(j));
								};
								out->Append(c);
							};
						}
						else if(i < max & input->Get(i) = 'p') {
							i += 1;
							if(i < max & input->Get(i) = 'o') {
								i += 1;
								if(i < max & input->Get(i) = 's') {
									i += 1;
									if(i < max & input->Get(i) = ';') {
										out->Append('\'');
									}
									else {
										for(j := start; j < i; j += 1;) {
											out->Append(input->Get(j));
										};
										out->Append(c);
									};
								}
								else {
									for(j := start; j < i; j += 1;) {
										out->Append(input->Get(j));
									};
									out->Append(c);
								};
							}
							else {
								for(j := start; j < i; j += 1;) {
									out->Append(input->Get(j));
								};
								out->Append(c);
							};
						};
					}
					# &quot;
					else if(i < max & input->Get(i) = 'q') {
						i += 1;
						if(i < max & input->Get(i) = 'u') {
							i += 1;
							if(i < max & input->Get(i) = 'o') {
								i += 1;
								if(i < max & input->Get(i) = 't') {
									i += 1;
									if(i < max & input->Get(i) = ';') {
										i += 1;
										out->Append('"');
									}
									else {
										for(j := start; j < i; j += 1;) {
											out->Append(input->Get(j));
										};
										out->Append(c);
									};
								}
								else {
									for(j := start; j < i; j += 1;) {
										out->Append(input->Get(j));
									};
									out->Append(c);
								};
							}
							else {
								for(j := start; j < i; j += 1;) {
									out->Append(input->Get(j));
								};
								out->Append(c);
							};
						}
						else {
							for(j := start; j < i; j += 1;) {
								out->Append(input->Get(j));
							};
							out->Append(c);
						};
					}
					# other
					else if(i < max & input->Get(i) = '#') {
						i += 1;
						if(i < max & input->Get(i) = 'x') {
							i += 1;
							str_num := "0x";
							while(i < max & (input->Get(i)->IsDigit() | 
								(input->Get(i) >= 'a' & input->Get(i) <= 'f') |
								(input->Get(i) >= 'A' & input->Get(i) <= 'F'))) {
								str_num->Append(input->Get(i));
								i += 1;
							};
							
							if(i < max & input->Get(i) = ';') {
								out->Append(str_num->ToInt()->As(Char));
								i += 1;
							}
							else {
								out->Append(str_num);
							};
						}
						else if(i < max & input->Get(i)->IsDigit()) {
							str_num := "";
							while(i < max & (input->Get(i)->IsDigit())) {
								str_num->Append(input->Get(i));
								i += 1;
							};

							if(i < max & input->Get(i) = ';') {
								out->Append(str_num->ToInt()->As(Char));
								i += 1;
							}
							else {
								out->Append(str_num);
							};
						}
						else {
							for(j := start; j < i; j += 1;) {
								out->Append(input->Get(j));
							};
							out->Append(c);
						};
					}
					else {
						for(j := start; j < i; j += 1;) {
							out->Append(input->Get(j));
						};
						out->Append(c);
					};
				}
				else {
					out->Append(c);
					i += 1;
				};
			};
			
			return out;
		}
	}
