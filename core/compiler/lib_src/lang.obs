		~#
		function : native : Factorial(n : Int) ~ Int {
			result := 1;
			for (i := 1; i <= n; i += 1;) {
				result *= i;
			};

			return result;
		}


		#~
		Models a 50/50 coin flip
		@return random true or false
		}
