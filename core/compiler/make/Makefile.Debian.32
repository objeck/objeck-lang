CC=g++
ARGS=-O3 -Wall -Wno-unused-function -D_OBJECK_LIB_PATH=$(OBJECK_LIB_PATH)
SRC=types.o tree.o scanner.o parser.o linker.o context.o intermediate.o optimization.o emit.o compiler.o posix_main.o
EXE=obc

$(EXE): $(SRC)
	$(CC) -m32 -o $(EXE) $(SRC)

%.o: %.cpp
	$(CC) -m32 $(ARGS) -c $< 

clean:
	rm -f $(EXE) *.o *~
