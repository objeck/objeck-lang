use Collection;

class Compiler {
	function : Main(args : String[]) ~ Nil {
		if(args → Size() = 1) {
			scanner ← Scanner → New(args[0]);
			if(scanner → Scan()) {
				parser ← Parser → New(scanner → GetTokens());
				if(parser → Parse()) {
					emitter ← Emitter → New(parser → GetStatements(), scanner → GetStrings());
					emitter → Emit();
					"Compiled to: instrs.e"->PrintLine();			
				};
			};
		};
	}
}	