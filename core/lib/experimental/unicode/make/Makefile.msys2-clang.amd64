ARGS=-g -Wall -D_X64 -D_MSYS2_CLANG -std=c++20 -mavx2 -Wno-maybe-uninitialized -Wno-unused-function

SRC=unicode.o
OBJ_LIBS=sys.a
SYS_PATH=../../core/shared
EXE=unicode

$(EXE): $(SRC) $(OBJ_LIBS) 
	$(CXX) -m64 -o $(EXE) $(SRC) $(OBJ_LIBS) -lz

%.o: %.cpp
	$(CXX) -m64 $(ARGS) -c $< 

sys.a:
	cd $(SYS_PATH); $(MAKE) -f make/Makefile.msys2-clang.amd64
	cp ../../core/shared/sys.a .

clean:
	cd $(SYS_PATH); $(MAKE) -f make/Makefile.msys2-clang.amd64 clean
	rm -f $(EXE) $(EXE).exe *.o *.a *.res *~
