		 function : native : Append(value : Int, string : String) ~ Nil {
			values :=  Struct.IntList->New();
			while(value >= 10) {
			mod := value % 10;
			values->AddFront(mod);
				value := value / 10;
			};
			values->AddFront(value);

			while(values->IsEnd() = false) {
				string->Append((values->Get() + 48)->As(Char));
				values->Next();
			};      
