use System.Concurrency;

bundle Default {
	class MyThread from Thread {
		New(name : String) {
			Parent(name);
		}

		method : public : Run(param : Base) ~ Nil {
			DoStuff2(DoStuff());
		}
		
		function : native : DoStuff() ~ Byte[] {
			bb : Byte[];
			for(i := 0; i < 1024; i+=1;) {
				bb := Byte->New[2048];
				each(j : bb) {
					bb[j] := j + i;
					bb[j] := bb[j] * i;
				};		
			};
			"Done "->PrintLine();

			return bb;
		}

		function : DoStuff2(bb : Byte[]) ~ Nil {
			each(j : bb) {
				bb[j] := bb[j] / 2;
			};		
			"Done 2"->PrintLine();
		}
	}

	class Threading {
		New() {
		}

		function : Main(args : String[]) ~ Nil {
			Run();
		}
		
		function : Run() ~ Nil {
			threads := Thread->New[7];
			each( i : threads) {
				threads[i] := MyThread->New(i->ToString());
			};	

			each( i : threads) {
				threads[i]->Execute(Nil);
			};
			
			each( i : threads) {
#			for(i := 0; i < threads->Size() / 3; i+=1;) {
				threads[i]->Join();
			};
			
			"Fin."->PrintLine();
		}
	}
}
