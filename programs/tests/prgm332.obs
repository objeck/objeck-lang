class Test {
	function : Main(args : String[]) ~ Nil {
		value := 2147483800;
		"value={$value}\n---"->PrintLine();
		
		bytes := Byte->New[8];
		
		bytes[0] := (value >> 56) and 0xff;
		bytes[1] := (value >> 48) and 0xff;
		bytes[2] := (value >> 40) and 0xff;
		bytes[3] := (value >> 32) and 0xff;
		bytes[4] := (value >> 24) and 0xff;
		bytes[5] := (value >> 16) and 0xff;
		bytes[6] := (value >> 8) and 0xff;
		bytes[7] := value and 0xff;
		System.IO.Console->Print("encoded: ")->Print(bytes->ToHexString())->PrintLine("\n---");
	
		value := 0;
		value += (bytes[0] and 0xff) << 8 + bytes[1] and 0xff;

		"decoded={$value}\n---"->PrintLine();
	}
}