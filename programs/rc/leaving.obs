use System.IO.Filesystem;

class Leaving {
	function : Main(args : String[]) ~ Nil {
		f : FileReader;

		if(args->Size() = 1) {
			f := FileReader->New(args[0]);
			l := f->ReadString();
			while(f->IsEOF() = false) {
				l->PrintLine();
				l := f->ReadString();
			};
		};
		
		leaving {
			if(f <> Nil & f->IsOpen()) {
				f->Close();
				"Closed."->PrintLine();
			};
		};

		"Done."->PrintLine();
	}
}
