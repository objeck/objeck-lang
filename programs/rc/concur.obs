use System.Concurrency;

class MyThread from Thread {
	New(name : String) {
		Parent(name);
	}

	method : public : Run(param : Base) ~ Nil {
		param->As(String)->ToUpper();
	}
}

class Concurrent {
	New() {
	}

	function : Main(args : String[]) ~ Nil {
		t0 := MyThread->New("t0");	
		t1 := MyThread->New("t1");	
		t2 := MyThread->New("t2");	
			
		t0->Execute("Enjoy");
		t1->Execute("Rosetta");
		t2->Execute("Code");
	}
}
