use Database.ODBC;

class SqlTest {
	function : Main(args : String[]) ~ Nil {
		conn := Connection->New("foo", "", "");
		rs : ResultSet;
		leaving {
			rs->Close();
			conn->Close();
		};
		
		if(conn->IsOpen()) {
			rs := conn->Select("SELECT * FROM Students;");
			if(rs <> Nil) {
				while(rs->Next()) {
					rs->GetVarchar("First Name")->PrintLine();
				};
			};
		};
	}
}
